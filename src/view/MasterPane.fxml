<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="thisPane" minHeight="500.0" minWidth="500.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MasterPaneController">
   <top>
      <HBox alignment="TOP_CENTER" BorderPane.alignment="TOP_CENTER">
         <children>
            <ComboBox fx:id="selectionCmb" onAction="#selectionSet" promptText="Select a Mode" />
         </children>
      </HBox>
   </top>
   <bottom>
      <Label fx:id="errorLbl" alignment="BOTTOM_CENTER" contentDisplay="CENTER" prefWidth="500.0" textFill="#f50202" textOverrun="CLIP" wrapText="true" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" />
         </padding>
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </bottom>
</BorderPane>
