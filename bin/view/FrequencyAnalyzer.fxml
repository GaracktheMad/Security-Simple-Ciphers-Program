<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Cipher Text:" />
            <HBox>
               <children>
                  <TextField fx:id="cipherTxt" />
                  <Button fx:id="analyzeField" mnemonicParsing="false" onAction="#analyze" text="Analyze" />
               </children>
            </HBox>
            <Label text="Key Guess:" />
            <HBox>
               <children>
                  <TextField fx:id="decryptKey" />
                  <Button fx:id="decryptBtn" mnemonicParsing="false" onAction="#decryptAttempt" text="Decrypt" />
               </children>
            </HBox>
            <Label text="Result:" />
            <TextField fx:id="resultField" editable="false" promptText="Result" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </left>
   <right>
      <VBox fx:id="labelBox" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></VBox>
   </right>
</fx:root>
